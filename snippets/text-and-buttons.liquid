{% assign text_color = settings.bg_color | replace: 'bg-light', '' | replace: 'bg-white', '' | replace: 'bg-black', 'text-light' | replace: 'bg-dark', 'text-light' %}
<div class="mx-auto mw-text mt-n4">
  {% if settings.overline != blank %}
  <p class="mt-4"><span class="small text-primary">{{ settings.overline }}</span></p>
  {% endif %}
  {% if settings.title != empty %}
  <h1 class="display-3 mt-4 {{ text_color }}">{{ settings.title }}</h1>
  {% endif %}
  {% if settings.lead_graph != blank %}
  <div class="lead mt-4 {{ text_color }}">
    {{ settings.lead_graph }}
  </div>
  {% endif %}
  {% if settings.primary_btn_link != blank or settings.secondary_btn_link != blank %}
    <p class="mt-4">
      {% if settings.primary_btn_link != blank %}
      <a {% if settings.primary_btn_link contains 'https://' %}target="_blank" rel="noopener"{% endif %}
        {% if settings.primary_btn_link contains '#' and settings.primary_btn_link contains '-modal' %}data-bs-toggle="modal" data-bs-target="{{ settings.primary_btn_link }}"{% endif %}
        href="{{ settings.primary_btn_link }}"
        class="btn btn-primary stretched-link mt-2" style="min-width: 160px;">{{ settings.primary_btn }}</a>
      {% endif %}
      {% if settings.secondary_btn_link != blank %}
      <a {% if settings.secondary_btn_link contains 'https://' %}target="_blank" rel="noopener"{% endif %}
        href="{{ settings.secondary_btn_link }}"
        class="btn btn-outline-primary with-stretched-link mt-2" style="min-width: 160px;">{{ settings.secondary_btn }}</a>
      {% endif %}
    </p>
  {% endif %}
</div>
