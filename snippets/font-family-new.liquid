{% if shop.permanent_domain == 'nothing-th.myshopify.com' %}
  <link rel="preload" as="font" href="{{ 'NotoSansThai-Regular.ttf' | asset_url }}" type="font/ttf" crossorigin>
{% elsif shop.permanent_domain == 'nothing-kr.myshopify.com' %}
  <link rel="preload" as="font" href="{{ 'AppleSDGothicNeoL.otf' | asset_url }}" type="font/otf" crossorigin>
{% elsif shop.permanent_domain == 'nothing-tw.myshopify.com' %}
  <link rel="preload" as="font" href="{{ 'PingFangHK-Light.otf' | asset_url }}" type="font/otf" crossorigin>
{% elsif shop.permanent_domain == 'nothing-jp.myshopify.com' %}
  <link rel="preload" as="font" href="{{ 'HiraginoSans.ttc' | asset_url }}" type="font/ttc" crossorigin>
{% else %}
  <link rel="preload" as="font" href="{{ 'LetteraMonoLLCondLight-Regular.otf' | asset_url }}" type="font/otf" crossorigin>
{% endif %}
<link rel="preload" as="font" href="{{ 'Ndot-55.otf' | asset_url }}" type="font/otf" crossorigin>
<link rel="preload" as="font" href="{{ 'NType82-Regular.otf' | asset_url }}" type="font/otf" crossorigin>
<link rel="preload" as="font" href="{{ 'NType82Mono-Regular.otf' | asset_url }}" type="font/otf" crossorigin>

<style>
  @font-face {
    font-family: "Ndot-55";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Ndot-55.otf' | asset_url }}"); 
  }
  @font-face {
    font-family: "NType82";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'NType82-Regular.otf' | asset_url }}");
  }
  @font-face {
    font-family: "NType82Mono";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'NType82Mono-Regular.otf' | asset_url }}");
  }
</style>

{% if shop.permanent_domain == 'nothing-th.myshopify.com' %}
