<section class="container-fits-viewport px-2 text-black section-top section-bottom">
  <div class="container-topic px-2 pt-header mt-sm-1 font-base">
    <div class="row mx-n2">
      <div class="col-sm-3 col-xl-2 px-2">
        {% render 'sidebar-newsroom' %}
      </div>
      <div class="col-sm-6 px-2">
        <div class="dot-border-dark border-top pb-2 d-none d-sm-block"></div>
        <a href="{{ blog.url }}" class="d-flex align-items-center fs-h2 mb-5 text-primary text-uppercase">(&nbsp;{{ 'general.company.back' | t }}&nbsp;)</a>
        {% render 'single-and-small-picture', img: article.image %}
        <div class="row">
          <div class="col-md-10">
            <p class="mb-2 mt-2 pt-2 fs-base font-ndot55">{{ article.published_at | time_tag: format: 'month_day_year' }}</p>
            <h4 class="card-title mb-4 fs-h2">{{ article.title | escape }}</h4>
            <div class="article-container richtext">
              {{ article.content | replace: '<a', '<a class="text-decoration-none"' }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
