<button class="niceButton d-none d-sm-block" onclick="myFunction()">Grid</button>
<div class="grid-v d-none">
  <div class="container-topic gx-2 gx-sm-5 h-100">
    <div class="d-flex justify-content-between h-100">
      <div class="mw-text position-relative d-none d-xl-flex justify-content-between">
        <div class="mw-text-href" style="background: rgba(0, 212, 255, .3);"></div>
        <div class="mw-text-href" style="background: rgba(0, 212, 255, .3);"></div>
      </div>
      <div class="flex-grow-1 d-flex">
        <div class="h-100 d-flex justify-content-end justify-content-xl-between w-left-container">
          <div class="ps-5 h-100 d-none d-xl-flex" style="background: rgba(53, 37, 187, .3);"></div>
          <div class="ps-5 h-100 d-none d-md-flex" style="background: rgba(53, 37, 187, .3);"></div>
        </div>
        <div class="mw-text-3 h-100" style="background: rgba(0, 212, 255, .3);"></div>
        <div></div>
      </div>
      {% if template contains 'account' 
        or template contains 'blog' 
        or template.suffix contains 'faq' 
        or template.suffix contains 'contact-us' 
        or template.suffix contains 'policy' 
        or template.suffix contains 'about-us' 
      %}
      <div class="mw-text-href d-none d-xl-flex" style="background: rgba(0, 212, 255, .3);"></div>
      {% else %}
      <div class="mw-text position-relative d-flex justify-content-between">
        <div class="mw-text-href" style="background: rgba(0, 212, 255, .3);"></div>
        <div class="mw-text-href" style="background: rgba(0, 212, 255, .3);"></div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
<script>
function myFunction() {
   var element = document.documentElement;
   element.classList.toggle("grid");
   document.querySelector('.grid-v').classList.toggle('d-none')
}
</script>
<style>

 .grid{
   position: relative;
 }
.grid::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    margin-right: auto;
    margin-left: auto;
    background-image: linear-gradient(rgb(255 0 0 / 30%) 3px, transparent 0px);
    background-size: 1px 4px;
    background-position: 0px 0px;
    pointer-events: none;
    z-index: 10000;
}
.grid-v{
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  position: fixed;
  z-index: 10000;
}

