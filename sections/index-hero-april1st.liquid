<style>
  .second-banner  {
    opacity: 0;
    transition: all 3s;
  }
  .second-banner.active {
    opacity: 1;
  }
</style>
<div class="container-fits-viewport w-100 position-absolute overflow-hidden z-index-1 as-first-banner">
  <div class="container-topic px-3 px-sm-6">
    <div class="position-absolute h-100 w-100 top-0 start-0 as-location-target" data-color='{{ section.settings.text_colorfake }}'>
      <figure class="h-100 mb-0 w-100">
        <picture class="w-100 h-100 d-block">
          <source media="(max-width: 576px)" 
            sizes="(max-width: 576px) 100vw, 576px" 
            srcset="
              {{ section.settings.imageMobfake | img_url: 'master' }}" >
          <img loading="lazy" class="img-fluid w-100 h-100 object-fit-cover"
            sizes="(max-width: 2160px) 100vw, 2160px"
            srcset="
              {{ section.settings.imagefake | img_url: '600x' }} 600w,
              {{ section.settings.imagefake | img_url: '857x' }} 857w,
              {{ section.settings.imagefake | img_url: '1069x' }} 1069w,
              {{ section.settings.imagefake | img_url: '1244x' }} 1244w,
              {{ section.settings.imagefake | img_url: '1494x' }} 1494w,
              {{ section.settings.imagefake | img_url: '1560x' }} 1560w,
              {{ section.settings.imagefake | img_url: '1660x' }} 1660w,
              {{ section.settings.imagefake | img_url: '1901x' }} 1901w,
              {{ section.settings.imagefake | img_url: '2040x' }} 2040w,
              {{ section.settings.imagefake | img_url: '2155x' }} 2155w,
              {{ section.settings.imagefake | img_url: '2160x' }} 2160w,
              {{ section.settings.imagefake | img_url: '3840x' }} 3840w" 
            src="{{ section.settings.imagefake | img_url: '2160x' }}">
        </picture>
      </figure>
    </div>
    <div class="text-{{ section.settings.text_colorfake }} container-fits-viewport section-top section-bottom text-white px-1 px-sm-0 w-100 position-relative d-flex flex-column justify-content-center">
      <div class="row justify-content-end">
        <div class="col-12 col-sm-4 col-xl-3">
          {% if section.settings.headingfake != blank %}
          <h2 class="mb-5 display-1 w-100 font-ndot55">{{ section.settings.headingfake }}</h2>
          <!-- <div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"> -->
          {% endif %}
        </div>
        <div class="col-12">
          <div class="row flex-row-reverse">
            <div class="col-sm-4 col-xl-3 offset-sm-1 font-ndot57 mb-5 mb-sm-4">
              {{ section.settings.lead_graphfake | replace: '<p', '<p class="display-3 mb-0"' | replace: '<a', '<a class="text-white text-decoration-underline"' }}
            </div>
          </div>
        </div>

        <div class="col-12 col-sm-4 col-xl-3 mt-5 mt-sm-0">
          <button class="btn btn-{{ section.settings.text_colorfake }} text-uppercase font-55 mt-2 me-2 text-nowrap as-first-banner-btn">{{ section.settings.link_textfake }}</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="position-relative overflow-hidden second-banner as-second-banner">
  <div class="container-topic px-3 px-sm-6">
    <div class="position-absolute h-100 w-100 top-0 start-0 as-location-target" data-color='{{ section.settings.text_color }}'>
      <figure class="h-100 mb-0 w-100">
        <picture class="w-100 h-100 d-block">
          <source media="(max-width: 576px)" 
            sizes="(max-width: 576px) 100vw, 576px" 
            srcset="
              {{ section.settings.imageMob | img_url: 'master' }}" >
          <img loading="lazy" class="img-fluid w-100 h-100 object-fit-cover"
            sizes="(max-width: 2160px) 100vw, 2160px"
            srcset="
              {{ section.settings.image | img_url: '600x' }} 600w,
              {{ section.settings.image | img_url: '857x' }} 857w,
              {{ section.settings.image | img_url: '1069x' }} 1069w,
              {{ section.settings.image | img_url: '1244x' }} 1244w,
              {{ section.settings.image | img_url: '1494x' }} 1494w,
              {{ section.settings.image | img_url: '1560x' }} 1560w,
              {{ section.settings.image | img_url: '1660x' }} 1660w,
              {{ section.settings.image | img_url: '1901x' }} 1901w,
              {{ section.settings.image | img_url: '2040x' }} 2040w,
              {{ section.settings.image | img_url: '2155x' }} 2155w,
              {{ section.settings.image | img_url: '2160x' }} 2160w,
              {{ section.settings.image | img_url: '3840x' }} 3840w" 
            src="{{ section.settings.image | img_url: '2160x' }}"
            alt="{{ section.settings.image.alt }}">
        </picture>
      </figure>
    </div>
    <div class="text-{{ section.settings.text_color }} container-fits-viewport section-top section-bottom text-white px-1 px-sm-0 w-100 position-relative d-flex flex-column justify-content-between">
      <div class="py-5"></div>
      <div class="row justify-content-end">
        <div class="col-12 col-sm-4 col-xl-3">
          {% if section.settings.heading != blank %}
          <h2 class="mb-5 display-1 w-100 font-ndot55">{{ section.settings.heading }}</h2>
          <!-- <div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"> -->
          {% endif %}
        </div>
        <div class="col-12">
          <div class="row flex-row-reverse">
            <div class="col-sm-4 col-xl-3 offset-sm-1 font-ndot57 mb-5 mb-sm-4">
              {{ section.settings.lead_graph | replace: '<p', '<p class="display-3 mb-0"' | replace: '<a', '<a class="text-dark text-decoration-underline"' }}
            </div>
          </div>
        </div>

        <div class="col-12 col-sm-4 col-xl-3 mt-5 mt-sm-0">
          {% assign subscribe_api = settings.subscribe_api  %}
          {% if section.settings.subscribe_api != blank %}{% assign subscribe_api = section.settings.subscribe_api  %}{% endif %}
          {% if section.settings.notify_title != blank %}<h2 class="font-ndot57 display-3 mb-0">{{ section.settings.notify_title }}</h2>{% endif %}
          <div class="mt-4 mt-sm-6">
            {% render 'keynote-sign-up', color: section.settings.text_color, place: 'homepage', subscribe_api: subscribe_api %}
          </div>
        </div>
      </div>
      <div class="row justify-content-end">
        <div class="col-12 col-sm-4 col-xl-3">
        {% if section.settings.icon != blank %}
          <img loading="lazy" class="pt-7 pt-sm-9" src="{{ section.settings.icon | img_url: 'master' }}">
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
const fakeBanner = new class {
  constructor ($parent) {
    if(!$parent) return
    this.$parent = $parent
    this.$fakeBtn = this.$parent.querySelector('.as-first-banner-btn')
    this.$fakeBanner = this.$parent.querySelector('.as-first-banner')
    this.$trueBanner = this.$parent.querySelector('.as-second-banner')
    this.init()
  }

  init() {
    var that = this
    this.$fakeBtn && this.$fakeBtn.addEventListener('click', function() {
      that.$trueBanner && that.$trueBanner.classList.add('active')
      that.$fakeBanner && that.$fakeBanner.classList.remove('z-index-1')
    })
  }
}(document.querySelector('.as-foolsday'))
</script>
