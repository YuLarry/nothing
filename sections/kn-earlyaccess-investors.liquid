<div class="container-fits-viewport d-flex align-items-sm-center bg-white">

  <div class="position-absolute h-100 w-100 top-0 as-location-target" data-color='{{ section.settings.text_color }}'>
    {% if section.settings.image != blank %}
    <figure class="h-100 mb-0 w-100">
      <picture class="w-100 h-100 d-block">
        <source media="(max-width: 576px)" 
          sizes="(max-width: 576px) 100vw, 576px" 
          srcset="
            {{ section.settings.imageMob | img_url: 'master' }}" >
        <img loading="lazy" class="img-fluid w-100 h-100 object-fit-cover"
          sizes="(max-width: 2160px) 100vw, 2160px"
          srcset="
            {{ section.settings.image | img_url: '600x' }} 600w,
            {{ section.settings.image | img_url: '857x' }} 857w,
            {{ section.settings.image | img_url: '1069x' }} 1069w,
            {{ section.settings.image | img_url: '1244x' }} 1244w,
            {{ section.settings.image | img_url: '1494x' }} 1494w,
            {{ section.settings.image | img_url: '1560x' }} 1560w,
            {{ section.settings.image | img_url: '1660x' }} 1660w,
            {{ section.settings.image | img_url: '1901x' }} 1901w,
            {{ section.settings.image | img_url: '2040x' }} 2040w,
            {{ section.settings.image | img_url: '2155x' }} 2155w,
            {{ section.settings.image | img_url: '2160x' }} 2160w,
            {{ section.settings.image | img_url: '3840x' }} 3840w" 
          src="{{ section.settings.image | img_url: '2160x' }}"
          alt="{{ section.settings.image.alt }}">
      </picture>
    </figure>
    {% endif %}
  </div>
  <div class="container-topic px-3 px-sm-6 position-relative section-top section-bottom">
    <div class="hero-text-{{ section.settings.text_color }} text-{{ section.settings.text_color }} bg-transparent px-1 px-sm-0 w-100 py-6">
      <div class="row justify-content-end">
        <div class="col-12 col-sm-6">
          {% if section.settings.heading != blank %}
          <p class="d-none d-sm-block mb-5 display-1 font-ndot55">&nbsp;</p>
          {% endif %}
          <div class="row justify-content-between">
            {% for block in section.blocks %}
            <div class="col-12 col-sm-5 text-sm-center pb-sm-9 mb-6 mb-sm-9">
              <img loading="lazy" class="" src="{{ block.settings.logo | img_url: 'master' }}">
            </div>
            {% endfor %}
          </div>
        </div>
        <div class="col-12 col-sm-3 offset-sm-2">
          {% if section.settings.heading != blank %}
          <h2 class="mb-5 display-1 font-ndot55">{{ section.settings.heading }}</h2>
          {% endif %}
          {{ section.settings.lead_graph | replace: '<p', '<p class="mb-0"' | replace: '<a', '<a class="dark-link text-decoration-underline"' }}
          {% if section.settings.lead_graph1 != blank %}
          <div class="text-{{ section.settings.text_color }}-50 mt-6">
            {{ section.settings.lead_graph1 | replace: '<p', '<p class="mb-0 small"' | replace: '<a', '<a class="dark-link text-decoration-underline"' }}
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Investors",
  "class": "position-relative overflow-hidden snap-child as-snap-list",
  "tag": "section",
  "settings": [
    {
      "type":      "select",
      "id":        "text_color",
      "label":     "Text color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "white",
          "label": "Light"
        }
      ],
      "default":   "dark"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "lead_graph",
      "label": "Lead paragraph"
    },
    {
      "type": "richtext",
      "id": "lead_graph1",
      "label": "Lead paragraph"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    },
    {
      "type": "image_picker",
      "id": "imageMob",
      "label": "Mobile image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    }
  ],
  "blocks": [
    {
      "name": "Investors",
      "type": "investors",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "logo image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Investors",
      "category": "Content"
    }
  ]
}
{% endschema %}