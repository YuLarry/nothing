
{% render 'hero-template' %}

{% schema %}
{
  "name": "Background with buttons",
  "class": "position-relative overflow-hidden snap-child as-snap-list",
  "tag": "section",
  "settings": [
    {
      "type":      "select",
      "id":        "text_color",
      "label":     "Text color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "white",
          "label": "Light"
        }
      ],
      "default":   "dark"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "lead_graph",
      "label": "Lead paragraph"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    },
    {
      "type": "image_picker",
      "id": "imageMob",
      "label": "Mobile image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Primary button text",
      "default": "( about us )",
      "info": "Button only show when text are filled"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_btn",
      "label": "Secondary button text",
      "info": "Button only show when text are filled"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "Secondary button link"
    },
    {
      "type":      "select",
      "id":        "block_alignment_in_mob",
      "label":     "Block alignment in Mobile",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default":   "top"
    }
  ],
  "presets": [
    {
      "name": "Background with buttons",
      "category": "Content"
    }
  ]
}
{% endschema %}