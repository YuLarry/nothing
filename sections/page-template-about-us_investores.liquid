
{% if section.settings.title %}
{% render 'aboutus-title', title: section.settings.title %}
{% endif %}
<div class="row mx-xl-n2 mb-xl-n9">
  {% for block in section.blocks %}
  <div class="{% if section.settings.mob_columns_per_row == '2' %}{% unless forloop.first %}col-6{% endunless %}{% else %}col-12{% endif %} col-xl-3 px-xl-2">
    {% render 'single-and-small-picture', img: block.settings.desktop_image %}
    <div class="pb-4 pb-xl-9 pt-1 pt-xl-5">
    {% if block.settings.title != empty %}
      <h4 class="mb-0 fs-h2">{{ block.settings.title }}</h4>
    {% endif %}
    {% if block.settings.post != empty %}
      <p class="mb-0">{{ block.settings.post }}</p>
    {% endif %} 
    </div>
  </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Investors",
  "settings": [
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "investors"
    },
    {
      "type": "radio",
      "id": "mob_columns_per_row",
      "label": "Mob columns per row",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Image",
          "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Investor"
        },
        {
          "type": "text",
          "id": "post",
          "label": "Post",
          "default": "post"
        }
      ]
    }
  ]
}
{% endschema %}