<style>
  .display-nums0{
    font-size: 80px;
  }
  @media screen and (max-width: 576px) {
    .display-nums0{
      font-size: 60px;
    }
  }
</style>
<div class="container-fits-viewport d-flex align-items-sm-center">

  <div class="position-absolute h-100 w-100 top-0 as-location-target" data-color='{{ section.settings.text_color }}'>
    <figure class="h-100 mb-0 w-100">
      <picture class="w-100 h-100 d-block">
        <source media="(max-width: 576px)" 
          sizes="(max-width: 576px) 100vw, 576px" 
          srcset="
            {{ section.settings.imageMob | img_url: 'master' }}" >
        <img loading="lazy" class="img-fluid w-100 h-100 object-fit-cover"
          sizes="(max-width: 2160px) 100vw, 2160px"
          srcset="
            {{ section.settings.image | img_url: '600x' }} 600w,
            {{ section.settings.image | img_url: '857x' }} 857w,
            {{ section.settings.image | img_url: '1069x' }} 1069w,
            {{ section.settings.image | img_url: '1244x' }} 1244w,
            {{ section.settings.image | img_url: '1494x' }} 1494w,
            {{ section.settings.image | img_url: '1560x' }} 1560w,
            {{ section.settings.image | img_url: '1660x' }} 1660w,
            {{ section.settings.image | img_url: '1901x' }} 1901w,
            {{ section.settings.image | img_url: '2040x' }} 2040w,
            {{ section.settings.image | img_url: '2155x' }} 2155w,
            {{ section.settings.image | img_url: '2160x' }} 2160w,
            {{ section.settings.image | img_url: '3840x' }} 3840w" 
          src="{{ section.settings.image | img_url: '2160x' }}"
          alt="{{ section.settings.image.alt }}">
      </picture>
    </figure>
  </div>
  <div class="section-with-mask container-topic px-3 px-sm-6 position-relative section-top section-bottom">
    <div class="hero-text-{{ section.settings.text_color }} text-{{ section.settings.text_color }} product-wrap is-dark bg-transparent px-1 px-sm-0 w-100 py-6">
      <div class="row">
        <div class="col-12 col-sm-4 offset-sm-2">
          {% if section.settings.heading != blank %}
          <h2 class="mb-5 display-1 font-ndot55">{{ section.settings.heading }}</h2>
          <!-- <div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"><div class="d-inline-block mt-n-small"> -->
          {% endif %}
          {{ section.settings.lead_graph | replace: '<p', '<p class="mb-0"' | replace: '<a', '<a class="dark-link text-decoration-underline"' }}
        </div>
        <div class="w-100"></div>
        <div class="col-12 col-sm-3 offset-sm-2">
          {% if section.settings.link == blank %}
          {% render 'keynote-sign-up', color: 'white', place: 'homepage', subscribe_api: settings.subscribe_api %}
          {{ section.settings.lead_graph1 | replace: '<p', '<p class="mb-0"' | replace: '<a', '<a class="dark-link text-decoration-underline"' }}
          {% else %}
          <div>
            <a class="btn btn-{{ section.settings.text_color }} text-uppercase font-55 mt-2 me-2 text-nowrap" 
            {% if section.settings.link contains 'https://' or section.settings.link contains 'http://' %}target="_blank" rel="noopener noreferrer"{% endif %}
              href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Background with sighup",
  "class": "position-relative overflow-hidden snap-child as-snap-list",
  "tag": "section",
  "settings": [
    {
      "type":      "select",
      "id":        "text_color",
      "label":     "Text color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "white",
          "label": "Light"
        }
      ],
      "default":   "dark"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "lead_graph",
      "label": "Lead paragraph"
    },
    {
      "type": "richtext",
      "id": "lead_graph1",
      "label": "Lead paragraph"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Primary button text",
      "default": "learn more"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Primary button link",
      "info": "Button only show when link are filled"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    },
    {
      "type": "image_picker",
      "id": "imageMob",
      "label": "Mobile image",
      "info": "Recommended image size 110N x auto (in px), format .jpg, where N can be integer in 1 ~ 12"
    }
  ],
  "presets": [
    {
      "name": "Background with sighup - Keynote",
      "category": "Content"
    }
  ]
}
{% endschema %}