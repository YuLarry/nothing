<div id="{{ section.settings.id_for_hash }}">
{%- liquid
  if section.settings.display == 'always'
    render 'pdp-banner', section: section
  elsif section.settings.display == 'unless_login'
    unless customer
      render 'pdp-banner', section: section
    endunless
  elsif section.settings.display == 'if_login'
    if customer
      render 'pdp-banner', section: section
    endif
  endif
-%}
</div>
