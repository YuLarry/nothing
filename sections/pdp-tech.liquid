{% assign tab1 = section.settings.tab1 | downcase | replace: ' ', '_' | replace: '.', '_' | replace: '&', '_' %}
{% assign tab2 = section.settings.tab2 | downcase | replace: ' ', '_' | replace: '.', '_' | replace: '&', '_' %}
{% assign tab3 = section.settings.tab3 | downcase | replace: ' ', '_' | replace: '.', '_' | replace: '&', '_' %}
{% assign tab4 = section.settings.tab4 | downcase | replace: ' ', '_' | replace: '.', '_' | replace: '&', '_' %}
<div name="tech" class="container-fits-viewport bg-dark p-4 pt-0">
  <div style="height: 1px;"></div>
  <div id="{{ section.settings.id_for_hash }}"></div>
  <nav>
    <div class="nav nav-tabs row border-0 py-2 py-md-4" id="nav-tab" role="tablist">
      <div class="col-4 col-md-1 text-white">{{ section.settings.heading }}</div>
      <div class="col-8 col-md-2 text-white as-section-name">{{ section.settings.subtitle }}</div>
      {% unless section.settings.tab1 == blank and section.settings.tab2 == blank and section.settings.tab3 == blank and section.settings.tab4 == blank %}
        {% if section.settings.tab1 != blank %}
          <div class="col-3 col-md-2 col-xl-1 d-none d-md-block nav-link px-3 py-0 text-white border-0 bg-transparent {% unless section.settings.tab2 == blank and section.settings.tab3 == blank and section.settings.tab4 == blank  %}cursor-pointer{% endunless %} as-nav-tab active" id="nav-{{ tab1 }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ tab1 }}" role="tab" aria-controls="nav-{{ tab1 }}" aria-selected="true">{{ section.settings.tab1 }}</div>
        {% endif %}
        {% if section.settings.tab2 != blank %}
          <div class="col-3 col-md-2 col-xl-1 d-none d-md-block nav-link px-3 py-0 text-white border-0 bg-transparent cursor-pointer as-nav-tab" id="nav-{{ tab2 }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ tab2 }}" role="tab" aria-controls="nav-{{ tab2 }}" aria-selected="false">{{ section.settings.tab2 }}</div>
        {% endif %}
        {% if section.settings.tab3 != blank %}
          <div class="col-3 col-md-2 col-xl-1 d-none d-md-block nav-link px-3 py-0 text-white border-0 bg-transparent cursor-pointer as-nav-tab" id="nav-{{ tab3 }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ tab3 }}" role="tab" aria-controls="nav-{{ tab3 }}" aria-selected="false">{{ section.settings.tab3 }}</div>
        {% endif %}
        {% if section.settings.tab4 != blank %}
          <div class="col-3 col-md-3 col-xl-3 d-none d-md-block nav-link px-3 py-0 text-white border-0 bg-transparent cursor-pointer as-nav-tab" id="nav-{{ tab4 }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ tab4 }}" role="tab" aria-controls="nav-{{ tab4 }}" aria-selected="false">{{ section.settings.tab4 }}</div>
        {% endif %}
      {% endunless %}
    </div>
  </nav>
  <div class="p-4 d-block d-md-none">
    <div class="position-relative customer-select as-customer-select bg-light mb-5 z-index-2 {% if section.settings.tab1 == blank and section.settings.tab2 == blank and section.settings.tab3 == blank and section.settings.tab4 == blank %} d-none{% endif %}">
      <div class="border border-dark flex-center customer-selected cursor-pointer customer-select-height">
        <span class="as-customer-selected">{{ section.settings.tab1 }}</span>
        <div class="end-0 pe-4 position-absolute">
          <div class=" customer-select-arrow flex-center" >
            {% render 'select-arrow' %}
          </div>
        </div>
      </div>
      <ol class="position-absolute list-unstyled w-100 border-top-0 border border-dark customer-select-lists overflow-hidden mb-0 bg-light">
        {% if section.settings.tab1 !=blank %}
          <li class="border-bottom border-dark cursor-pointer flex-center">
            <a class="as-customer-select-list as-select-tab customer-select-height w-100 text-center active">
              {{ section.settings.tab1 }}
            </a>
          </li>
        {% endif %}
        {% if section.settings.tab2 !=blank %}
          <li class="border-bottom border-dark cursor-pointer flex-center">
            <a class="as-customer-select-list as-select-tab customer-select-height w-100 text-center">
              {{ section.settings.tab2 }}
            </a>
          </li>
        {% endif %}
        {% if section.settings.tab3 !=blank %}
          <li class="border-bottom border-dark cursor-pointer flex-center">
            <a class="as-customer-select-list as-select-tab customer-select-height w-100 text-center">
              {{ section.settings.tab3 }}
            </a>
          </li>
        {% endif %}
        {% if section.settings.tab4 !=blank %}
          <li class="cursor-pointer flex-center">
            <a class="as-customer-select-list as-select-tab customer-select-height w-100 text-center">
              {{ section.settings.tab4 }}
            </a>
          </li>
        {% endif %}
      </ol>
    </div>
  </div>
  <div class="as-tab-content tab-content text-white pt-md-8" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-{{ tab1 }}" role="tabpanel" aria-labelledby="nav-{{ tab1 }}-tab" tabindex="0">
      <div class="row">
        <div class="col-xl-9">
          <div class="row">
          {% for block in section.blocks %}
            {% if block.type == 'design' %}
            <div class="col-md-4">
              <h2 class="fs-h2 mb-md-4 break-word">{{ block.settings.heading }}</h2>
              <ul class="list-unstyled mb-7 break-word">
                {{ block.settings.lead_graph | replace: '<p', '<li' | replace: '/p>', '/li>' | replace: '<a', '<a class="dot-border-white text-white"' }}
              </ul>
            </div>
            {% endif %}
          {% endfor %}
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-{{ tab2 }}" role="tabpanel" aria-labelledby="nav-{{ tab2 }}-tab" tabindex="0">
      <div class="row">
        <div class="col-md-9">
          <div class="row">
          {% for block in section.blocks %}
            {% if block.type == 'camera' %}
            <div class="col-md-4">
              <h2 class="fs-h2 mb-md-4 break-word">{{ block.settings.heading }}</h2>
              <ul class="list-unstyled mb-7 break-word">
                {{ block.settings.lead_graph | replace: '<p', '<li' | replace: '/p>', '/li>' | replace: '<a', '<a class="dot-border-white text-white"' }}
              </ul>
            </div>
            {% endif %}
          {% endfor %}
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-{{ tab3 }}" role="tabpanel" aria-labelledby="nav-{{ tab3 }}-tab" tabindex="0">
      <div class="row">
        <div class="col-md-9">
          <div class="row">
            {% for block in section.blocks %}
              {% if block.type == 'features' %}
              <div class="col-md-4">
                <h2 class="fs-h2 mb-md-4 break-word">{{ block.settings.heading }}</h2>
                <ul class="list-unstyled mb-7 break-word">
                  {{ block.settings.lead_graph | replace: '<p', '<li' | replace: '/p>', '/li>' | replace: '<a', '<a class="dot-border-white text-white"' }}
                </ul>
              </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-{{ tab4 }}" role="tabpanel" aria-labelledby="nav-{{ tab4 }}-tab" tabindex="0">
      <div class="row">
        <div class="col-md-9">
          <div class="row">
            {% for block in section.blocks %}
              {% if block.type == 'network_connectivity' %}
              <div class="col-md-4">
                <h2 class="fs-h2 mb-md-4 break-word">{{ block.settings.heading }}</h2>
                <ul class="list-unstyled mb-7 break-word">
                  {{ block.settings.lead_graph | replace: '<p', '<li' | replace: '/p>', '/li>' | replace: '<a', '<a class="dot-border-white text-white"' }}
                </ul>
              </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
